<%- include('../partials/header') %>



<main>
        
        <a href ='/projects/show/<%=task.parent%>'>Parent</a>
          
       
            <br><br>
    This is the <%=title%> page for the <%=task.name%>
    <br>
    <% if(task.leadName){ %> 
    <label>Task Lead: <%=task.leadName %>  </label>
    <% }else{ %>
        <label>Lead:<a href="">Sign Up</a></label>
        <% } %> 
    <br>
    <label>Description</label>
    <p><%=task.description%></p>
    <br>
    <br>


    <label>Edit:<a href="/projects/task/<%=task._id%>/edit"><%=task.name%>  </a></label>
   
    <br>
    <label>Tasks</label>
    <br>
   
    

 
    <section >
     <%if(tasks.length==0){%>
         <br>There are no sub-tasks!
 
 
         <%}else{tasks.forEach((t)=>{%>
 
             <label><a href='/projects/task/<%=t._id%>'><%=t.name%></a> </label><br>
 
             <%})}%>
 
             <a href="/projects/<%=task._id%>/new">Add Task</a>
 
 
    </section>
 
     </main>




